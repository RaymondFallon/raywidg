<p id="notice"><%= notice %></p>

<h1>Widgets</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Quantity</th>
      <th>Color</th>
      <th>Due by</th>
      <th>W type</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @widgets.each do |widget| %>
      <tr>
        <td><%= widget.email %></td>
        <td><%= widget.quantity %></td>
        <td><%= widget.color %></td>
        <td><%= widget.due_by %></td>
        <td><%= widget.w_type %></td>
        <td><%= widget.status %></td>
        <td><%= link_to 'Show', widget %></td>
        <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
        <td><%= link_to 'Destroy', widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Widget', new_widget_path %>
